@{
    var listaDepartamentos = ViewBag.ListaDepartamentos;

    @model Proyecto1.Models.Entities.Persona
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.HiddenFor(m => m.id)

    <label>Nombre:</label>
    @Html.TextBoxFor(m => m.nombre)

    <label>Apellidos:</label>
    @Html.TextBoxFor(m => m.apellidos)

    <label>Edad:</label>
    @Html.TextBoxFor(m => m.edad)

    <label> Departamento: </label>
    <select>

        @foreach (var dept in listaDepartamentos)
        {
            var isSelected = Model?.departamento != null && Model.departamento.id == dept.id;
            <option value="@dept.id" selected="@(isSelected ? "selected" : null)"> 
                @dept.nombre 
            </option>

        }


    </select>
    

    <input type="submit" value="Guardar" />
}
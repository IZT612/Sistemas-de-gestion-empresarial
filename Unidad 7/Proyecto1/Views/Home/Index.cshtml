@{
    var mensaje = ViewData["Mensaje"];
    var hora = ViewBag.HoraActual;
    @model Proyecto1.Models.Entities.Persona
}

<div class="text-center">
    <h1 class="display-4">@mensaje</h1>
    <p>@hora</p>
    <br />
    <p> ID de la persona: @Model.id </p>
    <p> Nombre de la persona: @Model.nombre </p>
    <p> Apellidos de la persona: @Model.apellidos </p>
    <p> Edad de la persona: @Model.edad </p>
    <p> Departamento: @Model.departamento.nombre </p>
    <br />
    @Html.ActionLink("Ejercicio 2", "listadoPersonas", "Home")
    <br />
    @Html.ActionLink("Ejercicio 3", "terceraPersona", "Home")
    <br />
    @Html.ActionLink("Ejercicio 4", "editarPersona", "Home")


</div>

@model Domain.DTO.PersonaWithListaDepartamentosDTO
@{
    ViewBag.Title = "Editar Persona";
}

<h2>Editar Persona</h2>

@using (Html.BeginForm("Edit", "Persona", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.id)

    <div class="form-group">
        @Html.Label("Nombre")
        @Html.TextBox("nombre", Model.nombre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Apellido")
        @Html.TextBox("apellido", Model.apellido, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Dirección")
        @Html.TextBox("direccion", Model.direccion, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Teléfono")
        @Html.TextBox("telefono", Model.telefono, new { @class = "form-control" })
    </div>

    @Html.Hidden("foto", Model.foto)

    <div class="form-group">
        @Html.Label("Departamento")
        <select name="departamento" class="form-control">
            <option value="">-- Seleccionar --</option>
            @foreach (var d in Model.departamentos)
            {

                <option value="@d.id" selected="@(d.id == Model.departamento)">
                    @d.nombre
                </option>


            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
}

@using Domain.DTO
@model PersonaWithListaDepartamentosDTO
@{
    ViewBag.Title = "Crear Persona";
}

<h2>Crear Persona</h2>

@using (Html.BeginForm("Create", "Persona", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.Hidden("id", 0)

    <div class="form-group">
        @Html.Label("Nombre")
        @Html.TextBox("nombre", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Apellido")
        @Html.TextBox("apellido", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Dirección")
        @Html.TextBox("direccion", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Teléfono")
        @Html.TextBox("telefono", "", new { @class = "form-control" })
    </div>

    @Html.Hidden("foto", "")

    <div class="form-group">
        @Html.Label("Departamento")
        <select name="departamento" class="form-control">
            <option value="0">-- Seleccionar --</option>
            @foreach (var d in Model.departamentos)
            {
                <option value="@d.id">@d.nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
}


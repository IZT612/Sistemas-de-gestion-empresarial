@using Domain.Entities
@model List<Departamento>
@{
    ViewBag.Title = "Crear Persona";
}

<h2>Crear Persona</h2>

@using (Html.BeginForm("Create", "Persona", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Nombre")
        @Html.TextBox("nombre", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Apellidos")
        @Html.TextBox("apellidos", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Teléfono")
        @Html.TextBox("telefono", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Dirección")
        @Html.TextBox("direccion", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Fecha de Nacimiento")
        @Html.TextBox("fechaNac", "", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.Label("Departamento")
        <select name="departamento" class="form-control">
            <option value="0">-- Seleccionar --</option>
            @foreach (var d in Model)
            {
                <option value="@d.id">@d.nombre</option>
            }
        </select>
    </div>

    @Html.Hidden("foto", "")
    @Html.Hidden("id", 0)

    <button type="submit" class="btn btn-primary">Crear</button>
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
}


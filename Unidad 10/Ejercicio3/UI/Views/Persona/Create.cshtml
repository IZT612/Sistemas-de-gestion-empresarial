@model Domain.DTO.PersonaWithListaDepartamentosDTO
@{
    ViewBag.Title = "Crear Persona";
}

<h2>Crear Persona</h2>

@using (Html.BeginForm("Create", "Persona", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Nombre")
        @Html.TextBox("Nombre", Model.nombre, new { @class = "form-control", name = "Nombre" })
    </div>

    <div class="form-group">
        @Html.Label("Apellidos")
        @Html.TextBox("Apellidos", Model.apellido, new { @class = "form-control", name = "Apellidos" })
    </div>

    <div class="form-group">
        @Html.Label("Teléfono")
        @Html.TextBox("Telefono", Model.telefono, new { @class = "form-control", name = "Telefono" })
    </div>

    <div class="form-group">
        @Html.Label("Departamento")
        <select name="NumeroDep" class="form-control">
            <option value="">-- Seleccionar --</option>
            @foreach (var d in Model.departamentos)
            {
                <option value="@d.id">@d.nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
}

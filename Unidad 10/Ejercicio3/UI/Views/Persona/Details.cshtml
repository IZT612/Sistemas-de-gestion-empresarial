@model Domain.DTO.PersonaWithNombreDepartamentoDTO
@{
    ViewBag.Title = "Detalles Persona";
}

<h2>Detalles</h2>

<dl class="dl-horizontal">
    <dt>Nombre</dt>
    <dd>@Model.nombre</dd>
    <dt>Apellidos</dt>
    <dd>@Model.apellido</dd>
    <dt>Teléfono</dt>
    <dd>@Model.telefono</dd>
    <dt>Dirección</dt>
    <dd>@Model.direccion</dd>
    <dt>Fecha Nacimiento</dt>
    <dd>@Model.fechaNac.ToShortDateString()</dd>
    <dt>Departamento</dt>
    <dd>@Model.nombreDepartamento</dd>
</dl>

@Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
@Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })

@model Domain.DTO.PersonaWithNombreDepartamentoDTO
@{
    ViewBag.Title = "Eliminar Persona";
}

<h2>Eliminar Persona</h2>

<p>¿Seguro que quieres borrar esta persona?</p>

<dl class="dl-horizontal">
    <dt>Nombre</dt>
    <dd>@Model.nombre</dd>
    <dt>Apellidos</dt>
    <dd>@Model.apellido</dd>
    <dt>Departamento</dt>
    <dd>@Model.nombreDepartamento</dd>
</dl>

@using (Html.BeginForm("Delete", "Persona", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.id)
    <button type="submit" class="btn btn-danger">Borrar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
}

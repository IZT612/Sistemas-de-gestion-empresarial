@model IEnumerable<Domain.DTO.PersonaWithNombreDepartamentoDTO>
@{
    ViewBag.Title = "Personas";
}

<h2>Personas</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")
</p>

<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Departamento</th>
        <th>Foto</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@p.nombre</td>
            <td>@p.apellido</td>
            <td>@p.nombreDepartamento</td>
            <td>
                @if (!string.IsNullOrEmpty(p.foto))
                {
                    <img src="@p.foto" alt="Foto" width="80" />
                }
            </td>
            <td>
                <a class="btn btn-info" href="@Url.Action("Details", "Persona", new { id = p.id })">Detalles</a>
                <a class="btn btn-warning" href="@Url.Action("Edit", "Persona", new { id = p.id })">Editar</a>
                <a class="btn btn-danger" href="@Url.Action("Delete", "Persona", new { id = p.id })">Eliminar</a>
            </td>
        </tr>
    }
</table>

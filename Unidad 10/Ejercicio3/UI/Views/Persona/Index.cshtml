@model IEnumerable<Domain.DTO.PersonaWithNombreDepartamentoDTO>
@{
    ViewBag.Title = "Personas";
}

<h2>Personas</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")
</p>

<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Departamento</th>
        <th>Foto</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.nombre</td>
            <td>@item.apellido</td>
            <td>@item.nombreDepartamento</td>
            <td>
                @if (!string.IsNullOrEmpty(item.foto))
                {
                    <img src="@item.foto" alt="Foto" width="80" />
                }
            </td>
        </tr>
    }
</table>

@model Domain.Entities.Departamento

@{
    ViewBag.Title = "Editar Departamento";
}

<h2>Editar Departamento</h2>

@using (Html.BeginForm("Edit", "Departamento", FormMethod.Post, new { id = Model.id }))
{
    <div class="form-group">
        <label>ID</label>
        <input class="form-control" value="@Model.id" disabled />

        @Html.HiddenFor(m => m.id)
    </div>

    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
    </div>

    <br />

    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Departamento")">Cancelar</a>
}

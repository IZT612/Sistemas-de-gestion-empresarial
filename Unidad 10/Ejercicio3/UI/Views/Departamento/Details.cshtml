@model Domain.Entities.Departamento

@{
    ViewBag.Title = "Detalles Departamento";
}

<h2>Detalles del Departamento</h2>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.id</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.nombre</dd>
    </dl>
</div>

<p>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Departamento")">Volver</a>
    <a class="btn btn-warning" href="@Url.Action("Edit", "Departamento", new { id = Model.id })">Editar</a>
</p>
